<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="largeButton" TargetType="Button">
        <Setter Property="Background" Value="#462AD8"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#28AEED"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="uploadIconImage" x:Shared="false" Resources="/Images/upload-icon.png"/>

    <Style x:Key="uploadButton" TargetType="Button">
        <Setter Property="Background" Value="#462AD8"/>
        <Setter Property="Content" Value="{StaticResource uploadIconImage}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#28AEED"/>
            </Trigger>
        </Style.Triggers>
        
    </Style>

</ResourceDictionary>